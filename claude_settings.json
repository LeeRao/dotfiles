{
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Read",
      "Grep",
      "Glob",
      "LS",
      "WebFetch",
      "WebSearch",
      "Bash(cat *)",
      "Bash(diff *)",
      "Bash(echo *)",
      "Bash(find *)",
      "Bash(gh pr diff *)",
      "Bash(git diff *)",
      "Bash(git log *)",
      "Bash(git -C * show *)",
      "Bash(git status *)",
      "Bash(git show *)",
      "Bash(grep *)",
      "Bash(head *)",
      "Bash(ls *)",
      "Bash(rg *)",
      "Bash(tail *)",
      "Bash(wc *)"
    ]
  },
  "hooks": {
    "Notification": [
      { "matcher": "", "hooks": [{ "type": "command", "command": "printf '\\a' > /dev/tty" }] }
    ],
    "Stop": [
      { "matcher": "", "hooks": [{ "type": "command", "command": "printf '\\a' > /dev/tty" }] }
    ]
  },
  "enabledPlugins": {
    "code-review@claude-plugins-official": true,
    "pr-review-toolkit@claude-plugins-official": true
  }
}
